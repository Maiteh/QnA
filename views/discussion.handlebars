<a href="/" class="btn-primary-back">Back to discussions</a>

<div class="wrap-title-discussion">
    <div class="title-discussion">{{title}}</div>
    <div class="msg-discussion">{{message}}</div>
    <p>By {{userId.username}}</p>
</div>

{{#each question}}
    <h2>{{this.question}}</h2>
    
    <p>{{this.answer}}</p>
    <form action="" method="post">
        <textarea name="answer" placeholder="Answer" class="textfield-a textarea-a"></textarea>
        <button type="submit" value="Answer" class="btn btn-primary">Answer</button>
    </form>
{{/each}}

