<a href="/" class="btn-primary-back">Back to discussions</a>

<div class="wrap-discussion-topic">
    <h2 class="title-discussion">{{title}}</h2>
    <p class="msg-discussion">{{message}}</p>
    <p class="user-discussion">By {{userId.username}}</p>
    <a href="https://www.facebook.com/sharer/sharer.php?u=http%3A//localhost%3A3000/discussions/{{discussionId}}">Share on Facebook</a>
</div>

{{#each data}}
    <h3 class="question">{{this.question}}</h3>
    
    {{#each this.answers}}
        <p class="p-answer">{{this.answer}}</p>
    {{/each}}

    <form action="/answers/{{../discussionId}}" method="post" class="form-answer">
        <input type="hidden" name="questionId" value="{{this._id}}">
        <textarea name="answer" placeholder="Answer" class="textarea-a"></textarea>
        <button type="submit" value="Answer" class="btn btn-answer">Answer</button>
    </form>
{{/each}}

        
        <form action="/questions/{{discussionId}}" method="post">
        <textarea name="question" placeholder="Question" class="textarea-q"></textarea>
        <button type="submit" value="Ask a new question" class="btn btn-primary">Ask a new question</button>
         </form>
